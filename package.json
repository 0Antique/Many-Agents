{
  "name": "many-agents",
  "version": "1.0.0",
  "description": "同时与多个AI大模型对话的桌面应用",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "python:install": "pip install -r requirements.txt"
  },
  "keywords": ["electron", "vue", "ai", "chat"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "vue": "^3.4.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "element-plus": "^2.5.0"
  },
  "build": {
    "appId": "com.manyagents.app",
    "productName": "Many-Agents",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "python/**/*",
      "requirements.txt"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python"
      }
    ]
  }
}
